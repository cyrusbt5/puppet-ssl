gem 'puppet-lint', '>= 2.1.0'
gem 'puppet', puppetversion
gem 'puppetlabs_spec_helper', '>= 1.2.2'
gem "rspec-puppet", :git => 'https://github.com/rodjek/rspec-puppet.git'
